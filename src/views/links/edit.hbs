<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/edit/{{link.id}}" method="POST">
						<div class="form-group">
							<input type="text" class="form-control" name="title" id="title" placeholder="Titulo" value="{{link.title}}" autofocus>
						</div>
						<div class="form-group">
							<input type="url" class="form-control" name="url" id="url" placeholder="url" value="{{link.url}}" autofocus>
						</div>
						<div class="form-group">
							<textarea name="descripcion" id="descripcion" rows="2" class="form-control" placeholder="Descripcion">{{link.descripcion}}</textarea>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-danger active btn-block">
								GUARDAR
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>